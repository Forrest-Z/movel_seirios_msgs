<?xml version="1.0" encoding="UTF-8" ?>
<launch>

	<arg name="mode" default="$(env MOVEL_MODE)" doc="mode: [deployment, development]"/>
	
	<group if="$(eval mode == 'deployment')">

		<node pkg="movel_octomap_server" type="movel_octomap_server_node" name="movel_octomap_server" output="screen"> 
			<rosparam file="$(find movel_octomap_server)/config/pointcloud_projection.yaml"/>
			<rosparam file="$(env HOME)/.config/movel/config/3dpipeline/movel_octomap_server/config/pointcloud_projection.yaml"/>
			<remap from="projected_map" to="map" />
		</node>

	</group>

	<group unless="$(eval mode == 'deployment')">

		<node pkg="movel_octomap_server" type="movel_octomap_server_node" name="movel_octomap_server" output="screen"> 
			<rosparam file="$(find movel_octomap_server)/config/pointcloud_projection.yaml"/>
			<remap from="projected_map" to="map" />
		</node>

	</group>


</launch>
