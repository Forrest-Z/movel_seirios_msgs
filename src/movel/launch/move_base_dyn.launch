<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="mode" default="$(env MOVEL_MODE)" doc="mode: [deployment, development]"/>

  <group if="$(eval mode == 'deployment')">
    <!-- Mapping -->
    <node pkg="slam_karto" type="slam_karto" name="slam_karto" output="screen">
      <rosparam command="load" file="$(find map_merge)/config/karto_configs.yaml" />
      <rosparam file="$(env HOME)/.config/movel/config/map_merge/config/karto_configs.yaml"/>
    </node>
  </group>

  <group unless="$(eval mode == 'deployment')">
    <!-- Mapping -->
    <node pkg="slam_karto" type="slam_karto" name="slam_karto" output="screen">
      <rosparam command="load" file="$(find map_merge)/config/karto_configs.yaml" />
    </node>
  </group>

  <include file="$(find movel)/launch/navigation_common.launch">
    <arg name="REMAP_MAP" value="map/merged"/>
  </include>

</launch>
