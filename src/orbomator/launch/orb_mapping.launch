<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="rgb_color_topic" default="/camera/rgb/image_raw" />
  <arg name="rgbd_depth_topic" default="/camera/depth_registered/image_raw" />
  <arg name="rgbd_camera_info" default="/camera/rgb/camera_info" />

  <include file="$(find orbamator)/launch/rgbd_map.launch">
    <arg name="rgb_color_topic" value="$(arg rgb_color_topic)"/>
    <arg name="rgbd_depth_topic" value="$(arg rgbd_depth_topic)"/>
    <arg name="rgbd_camera_info" value="$(arg rgbd_camera_info)"/>
  </include>
  <include file="$(find orbamator)/launch/map_tranform_monitor.launch" />
</launch>
