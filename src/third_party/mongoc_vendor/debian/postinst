#!/bin/bash

set -e

if [[ =="deployment" ]] && [[ -d /home/$USER/.config/movel/config/ ]]; then
  if [[ ! -d /home/$USER/.config/movel/config/movel_mongoc_vendor/config ]] && [[ -d /opt/ros/noetic/share/movel_mongoc_vendor/config ]]; then
    mkdir -p /home/$USER/.config/movel/config/movel_mongoc_vendor/config
    cp -r /opt/ros/noetic/share/movel_mongoc_vendor/config /home/$USER/.config/movel/config/movel_mongoc_vendor/config
  fi
fi
