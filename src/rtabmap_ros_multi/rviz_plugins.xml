<library path="lib/librtabmap_rviz_plugins">
  <class name="rtabmap_ros_multi/MapCloud"
         type="rtabmap_ros_multi::MapCloudDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays graph point clouds from rtabmap_ros_multi/MapData messages.
    </description>
    <message_type>rtabmap_ros_multi/MapData</message_type>
  </class>
  <class name="rtabmap_ros_multi/MapGraph"
         type="rtabmap_ros_multi::MapGraphDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays graphs from rtabmap_ros_multi/MapGraph messages.
    </description>
    <message_type>rtabmap_ros_multi/MapGraph</message_type>
  </class>
  <class name="rtabmap_ros_multi/Info"
         type="rtabmap_ros_multi::InfoDisplay"
         base_class_type="rviz::Display">
    <description>
      Displays information from rtabmap_ros_multi/Info messages.
    </description>
    <message_type>rtabmap_ros_multi/Info</message_type>
  </class>
  <class name="rtabmap_ros_multi/OrbitOriented"
         type="rtabmap_ros_multi::OrbitOrientedViewController"
         base_class_type="rviz::ViewController">
    <description>
      Camera orbit with orientation.
    </description>
  </class>
</library>
