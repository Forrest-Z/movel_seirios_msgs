<launch>

  <!-- Map server -->
  <arg name="map_file" default="$(find diff_wheeled_robot_gazebo)/maps/fivemap1/hall.yaml"/>
  <arg name="nav_map_file" default="$(find diff_wheeled_robot_gazebo)/maps/fivemap1/full1.yaml"/>
  <node name="map_server" pkg="multi_map_server" type="map_server" args="$(arg map_file)" />
 
  <node name="navigation_map_server" pkg="map_server" type="map_server" args="$(arg nav_map_file)" ns="/navigation" output="screen">
    <param name="frame_id" type="string" value="map"/>
  </node>

 

  <arg name="initial_pose_x" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>

  <include file="$(find diff_wheeled_robot_gazebo)/launch/includes/amcl.launch.xml">

    <arg name="initial_pose_x" value="0"/>
    <arg name="initial_pose_y" value="0"/>
    <arg name="initial_pose_a" value="0"/>

<!--
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
-->
  </include>

  <include file="$(find diff_wheeled_robot_gazebo)/launch/includes/move_base.launch.xml"/>


    <!--  ************** Visualisation **************  -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find diff_wheeled_robot_gazebo)/rviz/rviz_navigation.rviz"/>

</launch>

